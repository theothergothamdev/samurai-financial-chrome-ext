{
  "name": "Samurai Financial Improvements",
  "description": "Improvements for Samurai Financial website",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "16": "/favicon.png",
    "32": "/favicon.png",
    "48": "/favicon.png",
    "128": "/favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://samurai.financial/app"],
      "js": ["script.js"]
    }
  ]
}
